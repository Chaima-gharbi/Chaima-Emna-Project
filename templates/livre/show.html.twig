{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table table-striped">
        <tbody>

        <tr>
            <th>Titre</th>
            <td>{{ livre.titre }}</td>
        </tr>
        <tr>
            <th>Nombre de pages</th>
            <td>{{ livre.nbpages }}</td>
        </tr>
        <tr>
            <th>Date Edition</th>
            <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Nombre Exemplaires</th>
            <td>{{ livre.nbrexemplaires }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ livre.prix }}</td>
        </tr>
        <tr>
            <th>Isbn</th>
            <td>{{ livre.isbn }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>
                <img src="{{ asset('/img/' ~ livre.photo) }}" alt="" style="width: 70px;height: 70px;">
            </td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ livre.categorie }}</td>
        </tr>
        <tr>
            <th>Editeur</th>
            <td>{{ livre.editeur }}</td>
        </tr>
        <tr>
            <th>Auteurs</th>
            <td>

                {% for auteur in livre.auteurs %}

                    <span class="badge badge-primary">{{ auteur.prenom }}{{ auteur.nom }}</span>
                {% endfor %}

            </td>

        </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row">
            <div class="col col-lg-2">
                <a href="{{ path('livre_index') }}"><span class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp;&nbsp;Retour</span></a>
            </div> {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_USER')) %}
                {{ include('livre/_delete_form.html.twig') }}        {% endif %} </div>
    </div>




{% endblock %}
